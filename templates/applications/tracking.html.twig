                                <th scope="col">NBR. EXPECTED</th>
                                <th scope="col">PERCENTAGE (%)</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

        {% if isAdmin %}
        <div class="card">
            <div class="card-header">
                <h3>Number of Candidates per Date</h3>
            </div>
            <div class="card-block">
